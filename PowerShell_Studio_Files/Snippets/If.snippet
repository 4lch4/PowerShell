<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>If</Title>
			<Shortcut>if</Shortcut>
			<Description>Creates an if statement</Description>
			<Author>SAPIEN Technologies, Inc.</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal Editable="True">
					<ID>condition</ID>
					<ToolTip>Enter your condition statement</ToolTip>
					<Function></Function>
					<Default>condition</Default>
				</Literal>
			</Declarations>
			<Code Language="PowerShell">
				<![CDATA[if ($condition$) {
	$end$
}]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>