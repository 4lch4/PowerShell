<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>ValidateScript</Title>
			<Shortcut>ValidateScript</Shortcut>
			<Description>Uses a script to validate a parameter values. Parameters are valid when the script returns $True.</Description>
			<Author>SAPIEN Technologies, Inc.</Author>
			<HelpUrl>http://msdn.microsoft.com/en-us/library/system.management.automation.validatescriptattribute(v=vs.85).aspx</HelpUrl>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal Editable="True">
					<ID>ScriptBlock</ID>
					<ToolTip>Enter a script block that returns $True or $False. Use $_ to represent the parameter value.</ToolTip>
					<Function></Function>
					<Default>ScriptBlock</Default>
				</Literal>
			</Declarations>
			<Code Language="PowerShell">
				<![CDATA[[ValidateScript({$ScriptBlock$})]]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>